<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/statistic_day_layout"
    >

    <TextView
        android:id="@+id/statistic_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.7dp"
        android:layout_marginTop="46dp"
        android:text="@string/today_test"
        android:textColor="@color/text_gray3"
        android:textSize="@dimen/normal_title_size" />
    
    <TextView
        android:id="@+id/statistic_day_brac_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statistic_day_title"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        android:text="dagg"
        android:textColor="@color/text_gray2"
        android:textSize="19.3dp" />
    
    <ImageView
        android:id="@+id/statistic_day_emotion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="26.7dp"
        android:layout_marginTop="6.7dp"
        android:layout_below="@+id/statistic_day_brac_time"
        android:contentDescription="@string/today_test"
        android:scaleType="fitXY" />
    
	<ImageView
	    android:id="@+id/statistic_day_craving"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.7dp"
        android:layout_marginTop="6.7dp"
	    android:layout_below="@+id/statistic_day_brac_time"
	    android:layout_toRightOf="@+id/statistic_day_emotion"
	    android:contentDescription="@string/today_test"
	    android:scaleType="fitXY" />
    
    <RelativeLayout 
        android:id = "@+id/statistic_day_value_layout"
        android:layout_width="134.7dp"
        android:layout_height="134.7dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true">
    
    	<ImageView
    	    android:id="@+id/statistic_day_value_circle"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_centerInParent="true"
    	    android:contentDescription="@string/today_test"
    	    android:scaleType="fitXY" />
    
    	<TextView
        	android:id="@+id/statistic_day_brac_value"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textSize="@dimen/xlarge_text_size"
        	android:layout_centerInParent="true"
        	android:textColor="@color/white"
        />

    	<TextView
    	    android:id="@+id/statistic_day_brac"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="93.3dp"
    	    android:text="@string/result"
    	    android:textAlignment="textStart"
    	    android:textColor="@color/white"
    	    android:textSize="@dimen/normal_text_size"
    	    android:visibility="invisible" />

    </RelativeLayout>
    
      <LinearLayout 
          android:id = "@+id/statistic_day_block_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="12dp"
          android:layout_below="@+id/statistic_day_value_layout">
          
      </LinearLayout>
      
</RelativeLayout>