<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_addnote"
    android:layout_width="270dp"
    android:layout_height="70dp"
    android:gravity="center"
    android:layout_gravity="center|top" 
    >

    <TextView
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:text="記錄事件"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark_gray" />
	
    <LinearLayout
        android:id="@+id/note_date_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" >
        
    	<TextView
    	    android:id="@+id/note_tx_date"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_weight="1"
    	    android:gravity="center"
    	    android:text="今天"
    	    android:textColor="@color/dark_gray" />

    	<ImageView
        	android:id="@+id/note_im_date"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:layout_weight="3"
        	android:src="@drawable/dropdown_arrow"
        	android:paddingEnd="5dp" />
    </LinearLayout>
    
     <LinearLayout
         android:id="@+id/note_timeslot_layout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="6"
         android:gravity="center"
         android:orientation="horizontal"
         android:visibility="invisible" >
        
    	<TextView
    	    android:id="@+id/note_tx_timeslot"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_weight="1"
    	    android:gravity="center"
    	    android:text="今天"
    	    android:textColor="@color/dark_gray" />

    	<ImageView
        	android:id="@+id/note_im_timeslot"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:layout_weight="3"
        	android:src="@drawable/dropdown_arrow"
        	android:paddingEnd="5dp" />
    </LinearLayout>

</LinearLayout>
