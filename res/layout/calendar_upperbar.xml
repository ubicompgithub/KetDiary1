<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/upper_bar"
         android:layout_width="match_parent"
	     android:layout_height="55dip"
	     android:orientation="horizontal"
	     android:background="@drawable/upper_bar_bg"
	     android:paddingTop="10dp"
	     android:paddingStart="10dp"
	     android:paddingEnd="10dp">
           
	    <ImageView
			android:id="@+id/linechart_icon"
			android:src="@drawable/titleicon"
			android:layout_width="60dip"
			android:layout_height="wrap_content" />
			    
	    <TextView
	        android:id="@+id/month_text"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@+id/linechart_icon"       
	        android:text="Large Text"
	        android:textColor="@color/text_color"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_marginLeft="8dp" />
	    
	    <ImageView
			android:id="@+id/toggle"
			android:src="@drawable/dropup_arrow"
			android:layout_width="40dip"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:layout_toRightOf="@+id/month_text"
			android:layout_marginTop="8dp"
	        android:layout_marginLeft="-3dp" />
	    
	    <TextView
	        android:id="@+id/back_to_today"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/to_today"
	        android:text="1"
	        android:textColor="@color/text_color"
	        android:layout_toStartOf="@+id/filter"
	        android:gravity="center"
	        android:paddingTop="7dp" />	 
	        
	     <ImageView
	        android:id="@+id/filter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/my_filter"
	        android:layout_gravity="center_vertical"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp" />
</RelativeLayout>