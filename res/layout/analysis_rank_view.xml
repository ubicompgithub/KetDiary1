<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/analysis_rank_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/analysis_title_bar" >

        <TextView
            android:id="@+id/analysis_rank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26.7dp"
            android:gravity="center"
            android:text="@string/analysis_rank"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.3dp"
        android:layout_marginLeft="26.7dp"
        android:layout_marginTop="7.3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/analysis_rank_help_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analysis_rank_week_help"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/analysis_rank_help_week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/analysis_rank_content_layout_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/analysis_rank_low_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.7dp"
            android:gravity="center"
            android:text="@string/low"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>

        <ImageView
            android:id="@+id/analysis_rank_bar_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/analysis_rank_low_week"
            android:src="@drawable/analysis_rank_bar" />

        <ImageView
            android:id="@+id/analysis_rank_pointer_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/analysis_rank_pointer"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/analysis_rank_increase_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/analysis_rank_pointer_week"
            android:src="@drawable/analysis_rank_increase" />

        <ImageView
            android:id="@+id/analysis_rank_decrease_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/analysis_rank_increase_week"
            android:src="@drawable/analysis_rank_decrease" />

        <ImageView
            android:id="@+id/analysis_rank_3_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/analysis_rank_bar_week"
            android:src="@drawable/analysis_rank_3_off" />

        <ImageView
            android:id="@+id/analysis_rank_2_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/analysis_rank_3_week"
            android:src="@drawable/analysis_rank_2_off" />

        <ImageView
            android:id="@+id/analysis_rank_1_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/analysis_rank_2_week"
            android:src="@drawable/analysis_rank_1_off" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.3dp"
        android:layout_marginLeft="26.7dp"
        android:layout_marginTop="7.3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/analysis_rank_help_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analysis_rank_month_help"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/analysis_rank_help_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/analysis_rank_content_layout_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.3dp" >

        <TextView
            android:id="@+id/analysis_rank_low_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.7dp"
            android:gravity="center"
            android:text="@string/low"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>

        <ImageView
            android:id="@+id/analysis_rank_bar_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/analysis_rank_low_month"
            android:src="@drawable/analysis_rank_bar" />

        <ImageView
            android:id="@+id/analysis_rank_pointer_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/analysis_rank_pointer"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/analysis_rank_increase_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/analysis_rank_pointer_month"
            android:src="@drawable/analysis_rank_increase" />
        <ImageView
            android:id="@+id/analysis_rank_decrease_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/analysis_rank_increase_month"
            android:src="@drawable/analysis_rank_decrease" />

        <ImageView
            android:id="@+id/analysis_rank_3_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/analysis_rank_bar_month"
            android:src="@drawable/analysis_rank_3_off" />

        <ImageView
            android:id="@+id/analysis_rank_2_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/analysis_rank_3_month"
            android:src="@drawable/analysis_rank_2_off" />

        <ImageView
            android:id="@+id/analysis_rank_1_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/analysis_rank_2_month"
            android:src="@drawable/analysis_rank_1_off" />
    </RelativeLayout>

</LinearLayout>