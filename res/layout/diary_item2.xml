<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
   	    android:layout_height="100dp"
     	android:orientation="horizontal"
     	android:gravity="center"
     	android:background="@drawable/bluebackground"
        android:padding="10dp"
        android:id="@+id/diary_layout"
        android:layout_marginBottom="3dp" >

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/diary_time_layout" >

        <TextView
            android:id="@+id/diary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11號"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/diary_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期六"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/diary_timeslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上午"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color" />
    </LinearLayout>
         
         <ImageView
            android:id="@+id/diary_image_type"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1" />
	
	    <TextView	  
	        android:id="@+id/diary_items"    
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="和朋友們去唱歌"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="2" 
            android:textColor="@color/text_color"/>
</LinearLayout>