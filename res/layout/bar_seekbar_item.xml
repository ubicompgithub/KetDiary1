<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/bar_bg_button_normal"
    >
    <RelativeLayout
    	        android:id="@+id/question_seek_bar_layout"
    	        android:layout_width="174dp"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center"
    	        android:layout_marginLeft="10dp"
    	        android:splitMotionEvents="false"
    	        android:layout_weight="8"
    	        >
    	        <ImageView
    	            android:id="@+id/question_bar_bg"
    	            android:layout_width="174dp"
    	            android:layout_height="wrap_content"
    	            android:layout_centerVertical="true"
    	            android:src="@drawable/seekbar_bg" />
    	        
    	    	<SeekBar
    	    	    android:id="@+id/question_seek_bar"
    	    	    android:layout_width="174dp"
    	    	    android:layout_height="wrap_content"
    	    	    android:max="4"
    	    	    android:progress="2"
    	    	    android:layout_centerVertical="true"
    	    	    android:paddingLeft="16dp"
    	    	    android:paddingRight="16dp"
    	    	    android:paddingTop="10dp"
    	    	    android:paddingBottom="10dp"
    	    	    android:progressDrawable="@drawable/seekbar"
    	    	    android:thumb="@drawable/seekbar_thumb" />
    	    </RelativeLayout>
    	<TextView 
    	    android:id="@+id/question_seekbar_message"
    	    android:layout_width="90dp"
    	    android:layout_height="match_parent"
    	    android:layout_gravity="center"
    	    android:textColor="@color/text_gray"
    	    android:gravity="center"
    	    android:textSize="@dimen/large_text_size"
    	    android:layout_weight="3"
    	    /> 
    
</LinearLayout>