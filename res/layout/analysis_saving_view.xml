<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/analysis_saving_title_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/analyse_line" >
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/analysis_saving_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.3dp" 
        android:layout_marginTop="7.3dp">

        <ImageView
            android:id="@+id/analysis_saving_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.7dp"
            android:layout_marginRight="26.7dp"
            android:src="@drawable/energy_bar" />

        <RelativeLayout
            android:id="@+id/analysis_position_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/analysis_pros_position"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/analyse_node" />
            
             <ImageView
                android:id="@+id/analysis_pros_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/anaylse_backward"
                />

            <ImageView
                android:id="@+id/analysis_pros_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/analysis_pros_position"
                android:layout_marginLeft="10dp"
                android:src="@drawable/anaylse_forward" />
        </RelativeLayout>

    </RelativeLayout>
    
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="7.3dp">

        <TextView
            android:id="@+id/analysis_saving_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.7dp"
            android:gravity="center"
            android:text="@string/negative_consequence"
            android:textColor="@color/red"
            android:textSize="@dimen/normal_text_size" />
   
        <TextView
            android:id="@+id/analysis_target_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26.7dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/positive_goal" />
        
    </RelativeLayout>

</LinearLayout>